# Description : MessagePack implementation for C and C++
# URL         : https://github.com/msgpack/msgpack-c
# Maintainer  : camille, camille at lzr dot pw
# Depends on  : cmake boost

name=msgpack
version=4.0.2
c_version=c-4.0.0
cpp_version=cpp-4.0.2
release=1
source=(
"https://github.com/$name/$name-c/archive/$c_version.tar.gz"
"https://github.com/$name/$name-c/archive/$cpp_version.tar.gz"
)

build() {
    for var in "$c_version" "$cpp_version"; do
        mkdir "$name-c-$var/build"; cd "$_"

        cmake .. -DCMAKE_INSTALL_PREFIX=/usr

        make
        make DESTDIR="$PKG" install

        cd -
    done
}
