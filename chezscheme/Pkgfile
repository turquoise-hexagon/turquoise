# Description : (chez (chez scheme))
# URL         : https://www.scheme.com
# Maintainer  : camille, camille at lzr dot pw
# Depends on  : util-linux ncurses

name=chezscheme
version=9.6.0
release=1
source=("https://github.com/cisco/$name/archive/v$version.tar.gz")

build() {
    cd "ChezScheme-$version"

    ./configure              \
        --installprefix=/usr \
        --temproot="$PKG"    \
        --threads

    make
    make DESTDIR="$PKG" install

    rm -rf "$PKG/usr/lib/csv$version/examples"
}
