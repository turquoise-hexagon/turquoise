# Description : Chez Scheme
# URL         : https://www.scheme.com
# Maintainer  : camille, camille at lzr dot pw

name=chezscheme
version=10.2.0
release=1
source=("https://github.com/cisco/$name/releases/download/v$version/csv$version.tar.gz")

build() {
    cd "csv$version"

    ./configure --prefix=/usr

    make
    make DESTDIR="$PKG" install
}
