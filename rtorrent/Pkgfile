# Description : rTorrent BitTorrent client
# URL         : https://rakshasa.github.io/rtorrent
# Maintainer  : camille, camille at lzr dot pw
# Depends on  : autoconf-archive libtorrent ncurses

name=rtorrent
version=0.15.2
release=1
source=(
"https://github.com/rakshasa/$name/archive/v$version.tar.gz"
configure.patch
)

build() {
    cd "$name-$version"

    autoreconf    \
        --force   \
        --install \
        --verbose

    patch -p 1 -i "$SRC/configure.patch"

    ./configure       \
        --prefix=/usr \
        --disable-debug

    make
    make DESTDIR="$PKG" install

    install                      \
        -Dm644 "doc/old/$name.1" \
        -t "$PKG/usr/share/man/man1"
}
