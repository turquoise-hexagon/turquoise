# Description : A flexible, powerful, server-side application for playing music
# URL         : https://www.musicpd.org
# Maintainer  : camille, camille at lzr dot pw
# Depends on  : libmad libvorbis libid3tag glib boost meson ninja python3-pip fmt

name=mpd
version=0.23
release=1
source=(
"http://www.musicpd.org/download/$name/$version/$name-$version.tar.xz"
"$name"
)

build() {
    cd "$name-$version"

    # setup python venv
    dir=.venv

    mkdir -p        "$dir"
    python3 -m venv "$dir"

    . "$dir/bin/activate"

    pip3 -qqq install -U pip sphinx

    # actually build
    meson . build         \
        --prefix=/usr     \
        --sysconfdir=/etc \
        -Dmpcdec=disabled

    ninja -C build

    DESTDIR="$PKG" ninja -C build install

    install -Dm755 "$SRC/$name"       -t "$PKG/etc/rc.d"
    install -Dm644 doc/mpdconf.example   "$PKG/etc/$name.conf"

    rm -rf "$PKG/usr/share/doc"
}
