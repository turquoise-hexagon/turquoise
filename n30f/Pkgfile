# Depends on  : cairo xorg-libxcb

name=n30f
commit=08d1b273ce336be0928fa672fc1c0a4625ba50aa
version=20200411
release=1
source=("https://github.com/sdhand/$name/archive/$commit.tar.gz")

build() {
    cd "$name-$commit"

    make
    make DESTDIR="$PKG" install
}
