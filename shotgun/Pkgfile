# Description : Minimal X screenshot utility
# URL         : https://github.com/nexromancers/shotgun
# Maintainer  : camille, camille at lzr dot pw
# Depends on  : xorg-libxrandr rust

name=shotgun
version=2.3.0
release=1
source=(
"https://github.com/nexromancers/$name/archive/v$version.tar.gz"
cargo.patch
)

build() {
    cd "$name-$version"

    patch -p 1 -i "$SRC/cargo.patch"

    cargo build --release --locked

    install -Dm755 "target/release/$name" -t "$PKG/usr/bin"
}
