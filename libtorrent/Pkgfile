# Description : libTorrent BitTorrent library
# URL         : https://rtorrent.net
# Maintainer  : camille, camille at lzr dot pw

name=libtorrent
version=0.15.4
release=1
source=("https://github.com/rakshasa/$name/archive/refs/tags/v$version.tar.gz")

build() {
    cd "$name-$version"

    autoreconf    \
        --force   \
        --install \
        --verbose

    CONFIG_SHELL=/bin/bash \
        ./configure        \
        --prefix=/usr      \
        --disable-debug

    make
    make DESTDIR="$PKG" install
}
