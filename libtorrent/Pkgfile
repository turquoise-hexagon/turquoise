# Description : libTorrent BitTorrent library
# URL         : https://rtorrent.net
# Maintainer  : camille, camille at lzr dot pw

name=libtorrent
version=0.15.2
release=1
source=(
"https://github.com/rakshasa/$name/archive/refs/tags/v$version.tar.gz"
configure.patch
)

build() {
    cd "$name-$version"

    autoreconf    \
        --force   \
        --install \
        --verbose

    patch -p 1 -i "$SRC/configure.patch"

    ./configure       \
        --prefix=/usr \
        --disable-debug

    make
    make DESTDIR="$PKG" install
}
