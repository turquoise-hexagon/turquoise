# Description : A fork of the libmad MP3 decoding library
# URL         : https://github.com/tenacityteam/libmad
# Maintainer  : camille, camille at lzr dot pw

name=libmad
version=0.15.1b
release=1
source=(
"http://downloads.sourceforge.net/project/mad/$name/$version/$name-$version.tar.gz"
mad.pc
)

build() {
    sed -i "s/#version#/$version/" mad.pc
    install -Dm644 mad.pc -t "$PKG/usr/lib/pkgconfig"

    cd "$name-$version"

    ./configure --prefix=/usr

    make
    make DESTDIR="$PKG" install
}
