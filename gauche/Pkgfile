# Description : An R7RS Scheme implementation
# URL         : https://practical-scheme.net/gauche
# Maintainer  : camille, camille at lzr dot pw

name=gauche
version=0.9.11
release=1
source=("https://github.com/shirok/${name^}/releases/download/release${version//./_}_p1/${name^}-$version-p1.tgz")

build() {
    cd "${name^}-$version-p1"

    ./configure --prefix=/usr

    make
    make DESTDIR="$PKG" install

    rm -rf "$PKG/usr/share/info"
}
