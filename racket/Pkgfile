# Description : The Racket programming language
# URL         : https://racket-lang.org
# Maintainer  : camille, camille at lzr dot pw
# Depends on  : libffi libedit

name=racket
version=8.2
release=1
source=("https://download.$name-lang.org/releases/$version/installers/$name-$version-src.tgz")

build() {
    cd "$name-$version/src"

    ./configure           \
        --prefix=/usr     \
        --sysconfdir=/etc \
        --enable-ffi      \
        --disable-docs    \
        --enable-shared   \
        --disable-nls

    make
    make DESTDIR="$PKG" install

    find                    \
        '('                 \
        -name 'COPYING*' -o \
        -name 'README*'  -o \
        -name 'TODO*'       \
        ')' -delete
}
