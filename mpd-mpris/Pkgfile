# Description : An implementation of the MPRIS protocol for MPD
# URL         : https://github.com/natsukagami/mpd-mpris
# Maintainer  : camille, camille at lzr dot pw
# Depends on  : mpd dbus

name=mpd-mpris
version=0.4.0.2
release=1
source=("https://github.com/natsukagami/$name/releases/download/v${version%.*}-${version##*.}/${name}_${version%.*}-${version##*.}_linux_amd64.tar.gz")

build() {
    install -Dm755 "$name" -t "$PKG/usr/bin"
}
